<div class="container">
  {{#each people}}
    <div class="row">
      {{#each this}}
        <a href='/mural/{{id}}' class='person' style='background-image: url({{image}})'>
        <div class='name'>{{name}}</div>
        </a>
      {{/each}}
    </div>
  {{/each}}
</div>
<div id="module" style="display: {{popup}}">
  <div class="personcontent">
      <img src='{{person.image}}'>
  <h2>{{person.name}}</h2>
<div class="view" style="display:{{view}}">
  {{person.message}}
  <p></p>
  <a href="/mural/{{person.id}}/edit" class="link">Edit Message</a>
</div>

<div class="edit" style="display: {{edit}}">
  {{>edit}}
<a href="/mural/{{person.id}}" class="link">Back</a>
</div>
<a href="/mural" class="close">X</a>
  </div>
</div>
